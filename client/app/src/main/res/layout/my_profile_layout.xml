<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/porcentagem"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificar disponibilidade:"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:id="@+id/titledatadoacao"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="10"
        android:hint="@string/verificardoacao"
        android:id="@+id/datadoacao"
        android:layout_below="@id/titledatadoacao"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verificar_btn"
        android:background="@drawable/verificar"
        android:onClick=""
        android:layout_below="@+id/datadoacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>