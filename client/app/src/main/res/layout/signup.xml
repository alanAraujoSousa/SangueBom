<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cabecalho"
        android:background="#ef4c5d"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logosb"
            android:background="@drawable/logo_sb"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linha"
        android:layout_below="@id/cabecalho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cb0429"
            android:textSize="2sp"
            android:id="@+id/textparalinha" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha"
        android:id="@+id/menu"
        android:layout_centerHorizontal="true"
        android:background="#e24355"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ef4c5d"
            android:textSize="20sp"
            android:id="@+id/textparahead" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_cadastro"
        android:background="@drawable/tittle_cadastro"
        android:layout_below="@id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/nomecadastro"
        android:ems="10"
        android:id="@+id/nomedoador"
        android:layout_below="@+id/title_cadastro"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/usuariocadastro"
        android:ems="10"
        android:id="@+id/signup_login"
        android:layout_below="@+id/nomedoador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/senhacadastro"
        android:layout_below="@id/signup_login"
        android:id="@+id/signup_password"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/confirmarsenhacadastro"
        android:layout_below="@id/signup_password"
        android:id="@+id/confirm_signup_password"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_email"
        android:hint="@string/emailcadastro"
        android:layout_below="@+id/confirm_signup_password"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_email"
        android:id="@+id/titledatanascimento"
        android:text="Data de Nascimento:"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="10"
        android:id="@+id/datanascimento"
        android:layout_below="@+id/titledatanascimento"
        android:layout_centerHorizontal="true"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datanascimento"
        android:id="@+id/titletiposanguineo"
        android:text="Tipo sanguÃ­neo:"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/signup_blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/categoria"
        android:layout_below="@id/titletiposanguineo"
        android:layout_centerHorizontal="true"
        >
    </Spinner>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar!"
        android:id="@+id/signup_btn"
        android:background="@drawable/btn_cadastrar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_blood_type" />

</RelativeLayout>