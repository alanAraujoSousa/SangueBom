<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_sb">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logosb"
        android:background="@drawable/logo_sb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_cadastro"
        android:background="@drawable/tittle_cadastro"
        android:layout_below="@id/logosb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/usuariocadastro"
        android:ems="10"
        android:id="@+id/signup_login"
        android:layout_below="@+id/title_cadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/senhacadastro"
        android:layout_below="@id/signup_login"
        android:id="@+id/signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/confirmarsenhacadastro"
        android:layout_below="@id/signup_password"
        android:id="@+id/confirm_signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_email"
        android:hint="@string/emailcadastro"
        android:layout_below="@+id/confirm_signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_email"
        android:id="@+id/titletiposanguineo"
        android:text="Tipo sanguÃ­neo:"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/signup_blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/categoria"
        android:layout_below="@id/titletiposanguineo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </Spinner>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar!"
        android:id="@+id/signup_btn"
        android:background="@drawable/btn_cadastrar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_blood_type" />

</RelativeLayout>